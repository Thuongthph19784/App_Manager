<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tên loại "
            android:layout_marginRight="10dp"
            android:textColor="#3F51B5"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/item_loai_do_an_TxtTenLoai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="TextView"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/item_loai_do_an_btnSua"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_drive_file_rename_outline_24"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <Button

            android:id="@+id/item_loai_do_an_btnXoa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_delete_24"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>



</androidx.cardview.widget.CardView>