<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#99EF9C"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn: "
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#F44336"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/item_danh_sach_hoa_don_TxtTenMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá món ăn: "
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#9C27B0"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/item_danh_sach_hoa_don_TxtGiaMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/item_danh_sach_hoa_don_btnSua"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_drive_file_rename_outline_24"
            tools:ignore="SpeakableTextPresentCheck"
            />
        <Button
            android:id="@+id/item_danh_sach_hoa_don_btnXoa"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_delete_24"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#F44336"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/item_danh_sach_hoa_don_TxtTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#F44336"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/item_danh_sach_hoa_don_TxtSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày mua: "
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#F44336"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/item_danh_sach_hoa_don_TxtNgayMua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>



</LinearLayout>